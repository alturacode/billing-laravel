{
    "name": "alturacode/billing-laravel",
    "description": "AlturaCode Billing for Laravel",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "AlturaCode\\Billing\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "Gerardo Baez",
            "email": "g@gerardobaez.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.4",
        "illuminate/database": "^12.0",
        "alturacode/billing-core": "^0.11.0",
        "illuminate/http": "^12.0"
    },
    "suggest": {
        "alturacode/billing-stripe": "Stripe Billing Adapter for Altura Code Billing Package."
    },
    "extra": {
        "laravel": {
            "providers": [
                "AlturaCode\\Billing\\Laravel\\BillingLaravelServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "orchestra/testbench": "^10.5",
        "mockery/mockery": "1.6.10"
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "test": [
            "@clear",
            "@php vendor/bin/pest"
        ]
    }
}